---
layout: base.njk
---

<section class="hero gallery-hero">
  <div class="hero-content">
    <h1>{{ title }}</h1>
  </div>
</section>

<section class="section-main gallery-section">
  <div class="content-wrapper">
    <div class="weekly-showcase">
      {% if menuImage %}
        <div class="menu-showcase">
          <h3>Menu</h3>
          {% respImage menuImage, "Menu for " + title, "menu-img" %}
        </div>
      {% endif %}

      {% if content %}
        <div class="gallery-description">
          {{ content | safe }}
        </div>
      {% endif %}

      {% if dishes and dishes.length > 0 %}
        <div class="dishes-grid-post">
          {% for dish in dishes %}
            {% if dish.title and dish.image %}
              <div>
                <h3>{{ dish.title }}</h3>
                <div class="gallery-card">
                  {% respImage dish.image, dish.title, "gallery-img" %}
                </div>
                {% if dish.description %}
                  <p class="dish-description">{{ dish.description }}</p>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>