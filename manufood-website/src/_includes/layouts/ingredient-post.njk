---
layout: base.njk
---

<section class="hero ingredient-hero">
  <div class="hero-content">
    <h1>{{ title }}</h1>
    <p class="hero-tagline">{{ description }}</p>
    <div class="ingredient-names">
      {% if sinhalaName %}
        <p>Sinhala: {{ sinhalaName }}</p>
      {% endif %}
      {% if tamilName %}
        <p>Tamil: {{ tamilName }}</p>
      {% endif %}
    </div>
  </div>
</section>

<section class="section-main ingredient-section">
  <div class="content-wrapper">
    <div class="ingredient-showcase">
      {% if image %}
        <div class="ingredient-image">
          {% respImage image, title, "ingredient-image" %}
        </div>
      {% endif %}

      <div class="ingredient-content">
        {{ content | safe }}
      </div>

